---
import { type ClassValue, clsx } from "clsx";
import { twMerge } from "tailwind-merge";

export const cn = (...inputs: ClassValue[]) => {
  return twMerge(clsx(inputs));
};

const startPart = 2;

const features = [
  {
    title: "Find exercises faster than ever before.",
    highlighted: ["faster"],
    description:
      "Search for an exercise using either labels or a classic searchbar.",
  },
  {
    title: "Become stronger with detailed insights.",
    highlighted: ["stronger"],
    description:
      "Analyze your reps, weight, and trends to maximize perfomance.",
  },
  {
    title: "Easily add sets so you can focus fully on your workout.",
    highlighted: ["Easily", "focus fully"],
    description:
      "Your next set is estimated based on past data, making tracking easier than ever.",
  },
  {
    title: "Customize exercises for effortless logging.",
    highlighted: ["effortless"],
    description:
      "Edit details like labels, weight settings and more to make logging a set easier.",
  },
  {
    title: "Stay motivated by seeing how far you’ve grown.",
    highlighted: ["Stay motivated"],
    description:
      "View your complete history of sets and reps, all in one place.",
  },
];
---

<div>
  <section
    id={`part2`}
    class={cn("sm:h-screen h-[80vh] max-w-screen-lg w-full flex", {
      "justify-end": 0 % 2 === 0,
    })}
  >
    <div class="w-1/2 justify-center flex flex-col space-y-4">
      <h2
        class="text-[2rem]/[2.4rem] sm:text-[3rem]/[3.4rem] md:text-[4rem]/[4.4rem] font-bold"
        data-aos="fade-up"
        data-aos-easing="ease-out-cubic"
        data-aos-delay="200"
      >
        {
          features[0].title.split(" ").map((word) => (
            <span
              class={cn({
                "bg-clip-text text-transparent bg-gradient-to-r from-[#66AFFF] to-blue":
                  features[0].highlighted.includes(word),
              })}
            >
              {word}
            </span>
          ))
        }
      </h2>
    </div>
  </section>
  <section
    id={`part3`}
    class={cn("sm:h-screen h-[80vh] max-w-screen-lg w-full flex", {
      "justify-end": 1 % 2 === 0,
    })}
  >
    <div class="w-1/2 justify-center flex flex-col space-y-4">
      <h2
        class="text-[2rem]/[2.4rem] sm:text-[3rem]/[3.4rem] md:text-[4rem]/[4.4rem] font-bold"
        data-aos="fade-up"
        data-aos-easing="ease-out-cubic"
        data-aos-delay="200"
      >
